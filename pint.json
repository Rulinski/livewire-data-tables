{
    "preset": "laravel",
    "parallel": true,
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true,
        "single_quote": true,
        "not_operator_with_successor_space": true,
        "trailing_comma_in_multiline": {
            "elements": ["arrays"]
        },
        "binary_operator_spaces": {
            "default": "single_space"
        },
        "concat_space": {
            "spacing": "none"
        },
        "phpdoc_order": true,
        "phpdoc_align": false,
        "phpdoc_var_without_name": false
    },
    "exclude": [
        "node_modules",
        "vendor",
        "storage",
        "bootstrap/cache"
    ]
}
